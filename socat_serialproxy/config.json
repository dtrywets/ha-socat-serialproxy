{
  "name": "socat-serialproxy",
  "version": "1.0.4",
  "slug": "socat_serialproxy",
  "description": "Bridged serial device via TCP (e.g. from ser2net) into Home Assistant OS",
  "arch": ["aarch64", "armv7", "amd64"],
  "startup": "services",
  "boot": "auto",
  "host_network": true,
  "options": {
    "remote_host": "192.168.20.4",
    "remote_port": 2004,
    "device_name": "/dev/ttyWMA0"
  },
  "schema": {
    "remote_host": "str",
    "remote_port": "int",
    "device_name": "str"
  },
  "privileged": ["SYS_ADMIN"],
  "full_access": false,
  "tmpfs": true
}
